  void getdata(){
      cout<<"Enter your house no"<<endl;
      cin>>a;
      srand((unsigned)time(0)); 
    i = (rand()%3000)+1; 
    cout<< "Your total electricity uses is " << i <<" megawat"<< "\n";
    if(i<=500){
        b=i*5;
        cout<<"Your total cost is "<<b<<" Rupees"<<endl;
    }
    else{
        b=500*5+(i-500)*(5+2);
        cout<<"Your total cost is "<<b<<" rupees"<<endl;
    }
  }  
  void getdata1(){
      
       srand((unsigned)time(0)); 
    j = (rand()%90000)+1; 
    cout<< "Your total water uses is " <<j<<" letter"<< "\n";
    if(j<=35000){
        c=j*0.03;
        cout<<"Your total cost is "<<c<<" Rupees"<<endl;
    }
    else{
        c=35000*0.03+(j-35000)*(0.05);
        cout<<"Your total cost is "<<c<<" rupees"<<endl;
    }
      cout<<endl;
      d=c+b;
      cout<<"The total amount you need to pay for electricity and water is "<<d<<endl;
  }
};
